<!-- signup.html (replace your existing signup form markup with this) -->
<div class="container">
  <div class="form-container">
    <h2 class="form-title">Create Your Account</h2>

    <form id="signup-form" autocomplete="off">
      <div class="form-group">
        <label for="signup-name">Full Name</label>
        <input type="text" id="signup-name" class="form-control" placeholder="Enter your full name" required>
      </div>

      <!-- OTP Wrapper to prevent hiding/overlapping issues -->
<div id="otp-wrapper" class="otp-wrapper" style="display:block;position:relative;z-index:20;">

    <!-- Email + Send OTP -->
    <div class="form-group otp-email-group">
        <label for="signup-email">Email Address</label>

        <div style="display:flex;gap:10px;align-items:center;">
            <input
                type="email"
                id="signup-email"
                class="form-control"
                placeholder="Enter your email"
                required
                style="flex:1;"
            />

            <button
                id="send-otp-btn"
                type="button"
                class="btn btn-outline otp-btn"
                style="white-space:nowrap;z-index:40;"
            >
                Send OTP
            </button>
        </div>

        <small id="email-otp-feedback" style="display:none;color:#666;margin-top:6px;"></small>
    </div>

    <!-- OTP input (hidden until send is clicked) -->
    <div id="otp-row" style="display:none;margin-top:12px;">
        <div class="form-group" style="display:flex;gap:10px;align-items:center;">
            <input
                type="text"
                id="signup-otp"
                maxlength="6"
                placeholder="Enter 6-digit code"
                class="form-control"
                style="flex:1;"
            />

            <button
                id="verify-otp-btn"
                type="button"
                class="btn btn-primary"
                style="white-space:nowrap;z-index:40;"
            >
                Verify OTP
            </button>
        </div>

        <small id="otp-feedback" style="display:none;color:#666;margin-top:6px;"></small>
    </div>

</div>

      <div class="form-group" style="margin-top:16px">
        <label for="signup-password">Password</label>
        <input type="password" id="signup-password" class="form-control" placeholder="Create a password" required>
      </div>

      <div class="form-group">
        <label for="signup-confirm-password">Confirm Password</label>
        <input type="password" id="signup-confirm-password" class="form-control" placeholder="Confirm your password" required>
      </div>

      <div class="form-group">
        <label for="signup-role">Register as</label>
        <select id="signup-role" class="form-control" required>
          <option value="" disabled selected>Select role</option>
          <option value="student">Student</option>
          <option value="teacher">Tutor</option>
        </select>
      </div>

      <div class="form-group">
        <label><input type="checkbox" id="terms" required> I agree to the <a href="#">Terms</a> and <a href="#">Privacy</a></label>
      </div>

      <button id="create-account-btn" type="submit" class="btn btn-primary" style="width:100%;" disabled>Create Account</button>
    </form>

    <div class="form-footer" style="margin-top:12px;">
      <p>Already have an account? <a href="#" id="go-login">Login here</a></p>
    </div>
  </div>
</div>
