// src/server.js (CommonJS) - full file (replace your current server.js with this)
const path = require('path');
const express = require('express');
const dotenv = require('dotenv');
const cors = require('cors');

dotenv.config();

const connectDB = require('./config/db');

// Routers (keep your existing ones)
const pagesRouter = require('./routes/pages');
const coursesRouter = require('./routes/courses');
const contactRouter = require('./routes/contact');

// NEW: auth routes (create src/routes/auth.js as discussed)
const authRouter = require('./routes/auth');

const app = express();

// Middlewares
app.use(cors());           // enable CORS (adjust options if needed)
app.use(express.json());   // parse JSON bodies

// Connect DB
connectDB()
  .catch(err => {
    console.error('DB connection failed:', err);
    // don't exit â€” allow server to start so you can see errors in logs and fix env
  });

  const auth = require("./middleware/authMiddleware");

app.get("/api/protected", auth, (req, res) => {
  res.json({ message: "You accessed a protected route!", user: req.user });
});


// Serve static frontend (public/)
app.use(express.static(path.join(__dirname, '..', 'public')));

// API routes (keep existing)
app.use('/api/pages', pagesRouter);
app.use('/api/courses', coursesRouter);
app.use('/api/contact', contactRouter);

// NEW: auth API (signup/login)
app.use('/api/auth', authRouter);

// Fallback to index.html for SPA-style navigation (safe version)
// This avoids compiling '*' as a route pattern.
app.use((req, res, next) => {
  // pass through API requests
  if (req.path.startsWith('/api/')) return next();

  // serve index.html for client-side routes
  res.sendFile(path.join(__dirname, '..', 'public', 'index.html'), err => {
    if (err) {
      next(err);
    }
  });
});

// Simple error handler for JSON responses
app.use((err, req, res, next) => {
  console.error('Unhandled error:', err && (err.stack || err.message || err));
  // If the request expects HTML (browser navigation) let default handler manage it;
  // otherwise return JSON for API calls.
  if (req.path.startsWith('/api/')) {
    return res.status(500).json({ success: false, message: 'Server error' });
  }
  // fallback: let Express default handle (or you could send an error page)
  next(err);
});

const PORT = process.env.PORT || 5000;
app.listen(PORT, () => console.log(`Server running on port ${PORT}`));
